@model SanRafael.Models.Presentacion

@{
    ViewData["Title"] = "Editar presentación";
}

<section class="container">
    <h2>Editar presentación</h2>    
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>Presentación</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="idPresentacion"/>
                <input type="hidden" asp-for="InsumoId" />
                <div class="form-group">
                    <label asp-for="nombre" class="control-label"></label> <label class="campo-requerido">*</label>
                    <input asp-for="nombre" class="form-control" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                    <h1 class="texto-ayuda"> Ejemplos: Bolsa, caja, individual, etc...</h1>
                </div>
                <div class="form-group">
                    <label asp-for="precioPresentacion" class="control-label"></label> <label class="campo-requerido">*</label>
                    <input asp-for="precioPresentacion" class="form-control" type="number" min="0" data-msg="Ingresa un valor mayor a 0" id="presentacionPrecio" />
                    <span asp-validation-for="precioPresentacion" class="text-danger"></span>
                    <h1 class="texto-ayuda"> Precio de la presentación.</h1>
                </div>
                <div class="form-group">
                    <label asp-for="cantidadUnidades" class="control-label"></label> <label class="campo-requerido">*</label>
                    <input asp-for="cantidadUnidades" class="form-control" type="number" min="0" data-msg="Ingresa un valor mayor a 0" id="unidades" />
                    <span asp-validation-for="cantidadUnidades" class="text-danger"></span>
                    <h1 class="texto-ayuda"> Cantidad de insumos en la presentación.</h1>
                </div>
                <div class="form-group">
                    <label asp-for="precioUnitario" class="control-label"></label> <label class="campo-requerido">*</label>
                    <input asp-for="precioUnitario" class="form-control" type="number" min="0" data-msg="Ingresa un valor mayor a 0" id="precioUnitario"/>
                    <span asp-validation-for="precioUnitario" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="fechaCaducidad" /> @Html.DisplayNameFor(model => model.fechaCaducidad)
                        </label>
                    </div>
                </div>*@
                <div class="form-group">
                    <input type="submit" value="Guardar cambios" class="btn btn-block btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="VerInsumos" class="btn btn-success">Regresar a la lista</a>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}